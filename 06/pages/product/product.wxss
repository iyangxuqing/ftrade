.product {
  margin-left: -10rpx;
  margin-right: -10rpx;
  padding-bottom: 200rpx;
}

.cate-title, .product-title {
  display: flex;
  align-items: center;
  margin-bottom: 2rpx;
}

.cate-title .label, .product-title .label {
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-right: 2rpx;
  background-color: #ddd;
}

.cate-title .value, .product-title .value {
  flex-grow: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #ddd;
}

.head {
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 20rpx;
  background-color: #ddd;
  margin-top: 30rpx;
}

.product-images {
  display: flex;
  border-bottom: 1px solid #ddd;
}

.product-image {
  position: relative;
  width: 138rpx;
  height: 138rpx;
  padding: 10rpx;
}

.product-image-del{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top: -20rpx;
  right: -20rpx;
  padding: 20rpx;
}

.item {
  min-height: 100rpx;
  overflow: hidden;
  border-bottom: 1px solid #ddd;
  display: flex;
  align-items: center;
}

.item-new {
  color: #888;
}

.item-inner {
  width: 1000rpx;
  min-height: 100rpx;
  display: flex;
  align-items: center;
  transition: all 300ms ease;
}

.item-inner.swipeleft {
  transform: translateX(-300rpx);
}

.left {
  width: 692rpx;
  display: flex;
  align-items: center;
}

.item-label {
  width: 260rpx;
  padding-left: 20rpx;
  margin-right: 40rpx;
}

.item-value {
  padding: 10rpx 0;
  width: 330rpx;
}

.right {
  width: 300rpx;
  display: flex;
  align-items: center;
}

.sort-up {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
  background-color: seagreen;
}

.sort-down {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
  background-color: orange;
}

.delete {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
  background-color: red;
}
