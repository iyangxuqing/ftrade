@import '/templates/loading/loading.wxss';

.canvas{
  position: absolute;
  top: 0;
  left: -1000px;
  width: 300px;
  height: 300px;
  border: 1px solid #ccc;
  box-sizing: border-box;
}

.product {
  padding-bottom: 200rpx;
}

.product-images {
  width: 100%;
  height: 480rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.product-images swiper {
  width: 100%;
  height: 100%;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-image-add {
  width: 200rpx;
  height: 200rpx;
  padding: 30rpx;
  margin: 140rpx auto;
}

.product-image-del {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 0;
  right: 0;
  padding: 20rpx;
}

.product-title {
  text-align: center;
  font-size: 1.1rem;
  background-color: #eee;
}

.product-title input{
  padding: 20rpx;
}

.head {
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 20rpx;
  background-color: #eee;
  margin-top: 20rpx;
}

.item {
  min-height: 100rpx;
  overflow: hidden;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
}

.item-inner {
  width: 1000rpx;
  min-height: 100rpx;
  display: flex;
  align-items: center;
  transition: all 300ms ease;
}

.item-inner.swipeleft {
  transform: translateX(-300rpx);
}

.left {
  width: 672rpx;
  display: flex;
  align-items: center;
}

.item-label {
  width: 50%;
  padding: 20rpx;
  word-wrap: break-word;
}

.item-value {
  width: 50%;
  padding: 20rpx;
  word-wrap: break-word;
}

.item-new-label{
  width: 100%;
  color: #888;
}

.empty {
  color: #888;
}

.editing {
  opacity: 0;
}

.right {
  width: 300rpx;
  display: flex;
  align-items: center;
}

.sort-up {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
  background-color: seagreen;
}

.sort-down {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
  background-color: orange;
}

.delete {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
  background-color: red;
}

.editor {
  position: absolute;
  display: flex;
  align-items: center;
  width: 336rpx;
  padding: 20rpx;
  overflow: hidden;
  background-color: #fff;
}

textarea {
  width: 100%;
}

.ios textarea {
  margin-top: -14rpx;
  margin-left: -10rpx;
}

.android textarea {
  margin-top: 4rpx;
  margin-left: 0rpx;
}
