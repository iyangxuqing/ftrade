page {
  height: 100%;
}

.products {
  height: 100%;
}

.products-swiper {
  height: 100%;
}

.product{
  height: 100%;
  overflow: hidden;
  overflow-y: auto;
  padding-bottom: 200rpx;
}

.product-images {
  position: relative;
  width: 742rpx;
  height: 480rpx;
  margin-left: -36rpx;
  margin-right: -36rpx;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}

.product-images swiper {
  width: 100%;
  height: 100%;
}

.product-image {
  width: 100%;
  height: 100%;
  padding-top: 20rpx;
  padding-bottom: 60rpx;
}

.favorite {
  position: absolute;
  right: 30rpx;
  bottom: 0rpx;
}

.favorite-icon {
  width: 100rpx;
  height: 100rpx;
  padding: 10rpx;
}

.items-head {
  display: flex;
  align-items: center;
  height: 60rpx;
  padding: 10rpx;
  background-color: #ddd;
  margin-top: 20rpx;
}

.ara .items-head {
  flex-direction: row-reverse;
}

.item {
  display: flex;
  align-items: center;
  min-height: 80rpx;
  border-bottom: 1px solid #eee;
}

.ara .item {
  flex-direction: row-reverse;
}

.label, .value {
  display: flex;
  align-items: center;
  width: 50%;
  font-size: 0.9rem;
  padding: 10rpx 10rpx;
}

.ara .label, .ara .value {
  flex-direction: row-reverse;
}
