@import '/templates/loading/loading.wxss';

page {
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
}

view {
  box-sizing: border-box;
}

image {
  width: 100%;
  height: 100%;
  display: block;
}

input {
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
}

.net-fail {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.net-fail-icon {
  position: absolute;
  top: 20%;
  left: 50%;
  margin-left: -100rpx;
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
}

.net-fail-text {
  position: absolute;
  top: 20%;
  margin-top: 200rpx;
  width: 100%;
  text-align: center;
  color: #999;
}
