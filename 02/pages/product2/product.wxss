.product {
  padding-bottom: 200rpx;
}

.product-images {
  width: 100%;
  height: 480rpx;
  margin-bottom: 10rpx;

}

.product-images swiper {
  width: 100%;
  height: 100%;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-image-add {
  width: 200rpx;
  height: 200rpx;
  padding: 30rpx;
  margin: 140rpx auto;
  opacity: 0.3;
}

.product-image-del {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 0;
  right: 0;
  padding: 20rpx;
}

.cate-title, .product-title {
  display: flex;
  align-items: center;
  margin-bottom: 2rpx;
}

.cate-title .label, .product-title .label {
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-right: 2rpx;
  background-color: #eee;
}

.cate-title .value, .product-title .value {
  flex-grow: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #eee;
}

.head {
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 20rpx;
  background-color: #eee;
  margin-top: 30rpx;
}

.item {
  min-height: 100rpx;
  overflow: hidden;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
}

.item-new {
  color: #888;
}

.item-inner {
  width: 1000rpx;
  min-height: 100rpx;
  display: flex;
  align-items: center;
  transition: all 300ms ease;
}

.item-inner.swipeleft {
  transform: translateX(-300rpx);
}

.left {
  width: 672rpx;
  display: flex;
  align-items: center;
}

.item-label {
  width: 50%;
  padding: 10rpx 20rpx;
  line-height: 1.2;
  word-wrap: break-word;
}

.item-value {
  width: 50%;
  padding: 10rpx 20rpx;
  line-height: 1.2;
  word-wrap: break-word;
}

.item-label.empty, .item-value.empty {
  color: #888;
}

.item-label.editing, .item-value.editing {
  opacity: 0;
}

.right {
  width: 300rpx;
  display: flex;
  align-items: center;
}

.sort-up {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
  background-color: seagreen;
}

.sort-down {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
  background-color: orange;
}

.delete {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
  background-color: red;
}

.editor {
  position: absolute;
  width: 336rpx;
  padding: 10rpx 20rpx;
  overflow: hidden;
  background-color: #fff;
}

textarea {
  width: 100%;
}

.ios textarea {
  margin-top: -18rpx;
  margin-left: -12rpx;
}

.android textarea {
  margin-top: 4rpx;
  margin-left: 0rpx;
}
