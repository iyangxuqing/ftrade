page {
  position: relative;
  height: 100%;
  margin: 0;
  padding: 0;
}

.page{
  position: relative;
  height: 100%;
  transition: all 0.3s ease;
}

.page.left-open{
  transform: translate3d(500rpx, 0, 0);
}

.page-mask{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.page-header {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
}

.page-content {
  width: 100%;
  height: 100%;
  padding-top: 306rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  overflow: hidden;
  overflow-y: auto;
}

.page-header-1 {
  display: flex;
  padding-right: 40rpx;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}

.page-header-2 {
  height: 202rpx;
  overflow: hidden;
  overflow-y: auto;
  padding: 10rpx 0 10rpx 40rpx;
  border-bottom: 1px solid #ccc;
}

.menu-trigger {
  flex-shrink: 0;
  width: 100rpx;
  height: 100rpx;
  padding: 26rpx;
  opacity: 0.9;
}

.categorys-level1 {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  overflow-x: auto;
}

.categorys-level2 {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
}

.category-level1 {
  padding-right: 40rpx;
  color: #111;
}

.category-level2 {
  height: 60rpx;
  line-height: 60rpx;
  padding-right: 40rpx;
  font-size: 0.85rem;
  color: #333;
}

.active {
  font-weight: 600;
  color: blue;
}

.products {
  display: flex;
  flex-wrap: wrap;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}

.product {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  width: 200rpx;
}

.product:nth-of-type(3n+2) {
  margin-left: 35rpx;
  margin-right: 35rpx;
}

.line {
  width: 100%;
  height: 40rpx;
  display: block;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #eee;
}

.product-image {
  width: 200rpx;
  height: 200rpx;
}

.product-title {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 0.8em;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* left */
.left {
  position: absolute;
  top: 0;
  left: 0;
  width: 500rpx;
  height: 100%;
  background-color: #eee;
  transition: all 0.3s ease;
  transform: translate3d(-500rpx, 0, 0);
}

.left.left-open {
  transform: translate3d(0, 0, 0);
}
