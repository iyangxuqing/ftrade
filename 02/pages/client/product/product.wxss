page {
  position: relative;
  height: 100%;
  margin: 0;
  padding: 0;
}

.page {
  position: relative;
  height: 100%;
  overflow: hidden;
  overflow-y: auto;
  transition: all 0.3s ease;
  -webkit-overflow-scrolling: touch;
}

.page.menuOpen {
  transform: translate3d(500rpx, 0, 0);
}

.page-header {
  position: fixed;
  /*position: absolute;*/
  width: 100%;
  height: 400rpx;
}

.page-header-images {
  height: 100%;
}

.page-content {
  height: 100%;
  padding-top: 400rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-bottom: 40rpx;
}

.page-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1001;
}

.menu-trigger {
  position: fixed;
  top: -8rpx;
  left: -8rpx;
  width: 120rpx;
  height: 120rpx;
  padding: 0 40rpx 40rpx 0;
  z-index: 1000;
}

.menu-trigger-inner {
  width: 100%;
  height: 100%;
  padding: 2rpx;
  background-color: rgba(0, 0, 0, 0.04);
}

.products {
  /*height: 100%;*/
  /*overflow: hidden;
  overflow-y: auto;*/
  /*-webkit-overflow-scrolling: touch;*/
  margin-top: 40rpx;
}

.products::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
}

.products-head {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding-left: 20rpx;
  background-color: #ccc;
  margin-bottom: 40rpx;
}

.cate-separater {
  padding: 10rpx;
}

.products-list {
  display: flex;
  flex-wrap: wrap;
}

.product {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  width: 200rpx;
}

.product:nth-of-type(3n+2) {
  margin-left: 35rpx;
  margin-right: 35rpx;
}

.product-image {
  width: 200rpx;
  height: 200rpx;
}

.product-title {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 0.8em;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.line {
  width: 100%;
  height: 40rpx;
  display: block;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #eee;
}

/* menu-left */

.menu-left-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 500rpx;
  height: 100%;
  transform: translate3d(-500rpx, 0, 0);
  transition: all 0.3s ease;
  background-color: #eee;
}

.menu-left-container::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
}

.menu-left-container.menuOpen {
  transform: translate3d(0, 0, 0);
}

.items {
  height: 100%;
  overflow: hidden;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  background-color: #fff;
}

.item-group {
  overflow: hidden;
  transition: all 0.3s ease;
  margin-bottom: 1px;
}

.item-group.expand {
  margin-bottom: 0;
}

.item {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding-left: 40rpx;
  background-color: #eee;
}

.item-level1 {
  height: 80rpx;
  color: #111;
  background-color: #d8d8d8;
}

.item-level2 {
  color: #333;
  font-size: 0.9em;
  margin-bottom: 1px;
}

.item-level2:last-child {
  margin-bottom: 0;
}

.item-title {
  flex-grow: 1;
}

.item-icon {
  flex-shrink: 0;
  width: 80rpx;
  height: 80rpx;
  padding: 20rpx;
}

.item-icon.packup {
  transform: rotateZ(90deg);
}

.item-icon.unfold {
  transform: rotateZ(270deg);
}
