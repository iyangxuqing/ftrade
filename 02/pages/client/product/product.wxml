<view class="product">
  <view class="product-images">
    <swiper indicator-dots>
      <block wx:for="{{product.images}}" wx:key="">
        <swiper-item>
          <view class="product-image">
            <image src="{{item}}" mode="aspectFit" />
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class="items product-prices">
    <view class="items-head">批发价格</view>
    <block wx:for="{{product.prices}}" wx:key="">
      <view class="item product-price">
        <view class="label">{{item.label}}</view>
        <view class="value">{{item.value}}</view>
      </view>
    </block>
  </view>

  <view class="items product-props">
    <view class="items-head">商品属性</view>
    <block wx:for="{{product.props}}" wx:key="">
      <view class="item product-prop">
        <view class="label">{{item.label}}</view>
        <view class="value">{{item.value}}</view>
      </view>
    </block>
  </view>
  
</view>