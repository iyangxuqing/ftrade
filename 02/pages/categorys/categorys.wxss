/* pages/test/test.wxss */

page {
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
}

view {
  box-sizing: border-box;
}

image {
  width: 100%;
  height: 100%;
  display: block;
}

::-webkit-scrollbar {
  display: none;
}

.categorys {
  border-top: 1px solid #ccc;
}

.category {
  position: relative;
  overflow: hidden;
  background: #fff;
  border-bottom: 1px solid #ccc;
}

.category-new {
  display: flex;
  align-items: center;
}

.children .category {
  font-size: 0.8em;
  border-bottom: 1px dashed #ccc;
}

.children .category:last-child {
  border-bottom: 1px solid #ccc;
}

.children .category-new {
  padding-left: 0px;
}

.category .inner {
  position: relative;
  height: 120rpx;
  transition: all 300ms ease;
}

.category .inner.swipeleft {
  transform: translateX(-360rpx);
}

.left {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 670rpx;
  display: flex;
  align-items: center;
}

.right {
  position: absolute;
  right: -360rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 360rpx;
  display: flex;
  align-items: center;
}

.editor {
  width: 120rpx;
  height: 116rpx;
  padding: 40rpx;
}

.editor.sort-up {
  background-color: seagreen;
}

.editor.sort-down {
  background-color: orange;
}

.editor.delete {
  background-color: red;
}

.category .icon {
  width: 100rpx;
  height: 120rpx;
  padding: 40rpx 30rpx;
  flex-shrink: 0;
}

.category .title {
  margin-left: 20rpx;
  flex-grow: 1;
}

.category .thumb {
  width: 120rpx;
  height: 120rpx;
  padding: 10rpx;
  margin-left: -10rpx;
  flex-shrink: 0;
  background-color: transparent;
}

.category.child .thumb {
  margin-left: 120rpx;
}
