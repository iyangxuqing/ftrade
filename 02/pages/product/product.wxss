page {
  height: 100%;
}

.product {
  padding-bottom: 200rpx;
}

.cate-title, .product-title {
  display: flex;
  align-items: center;
  margin-bottom: 2rpx;
}

.cate-title .label, .product-title .label {
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-right: 2rpx;
  background-color: #ddd;
}

.cate-title .value, .product-title .value {
  flex-grow: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #ddd;
}

.head {
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 20rpx;
  background-color: #ddd;
  margin-top: 30rpx;
}

.product-images {
  display: flex;
  border-bottom: 1px solid #ddd;
}

.product-image {
  width: 134rpx;
  height: 134rpx;
  padding: 10rpx;
}

.item {
  min-height: 100rpx;
  overflow: hidden;
  border-bottom: 1px solid #ddd;
  display: flex;
  align-items: center;
}

.item-new{
  color: #ccc;
}

.item-label {
  width: 50%;
  padding: 10rpx 20rpx;
}

.item-value {
  width: 50%;
  padding: 10rpx 20rpx;
}

.item .inner {
  width: 1030rpx;
  min-height: 100rpx;
  display: flex;
  align-items: center;
  transition: all 300ms ease;
}

.item .inner.swipeleft {
  transform: translateX(-300rpx);
}

.left {
  width: 670rpx;
  display: flex;
  align-items: center;
}

.right {
  width: 300rpx;
  display: flex;
  align-items: center;
}

.editor {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
}

.editor.sort-up {
  background-color: seagreen;
}

.editor.sort-down {
  background-color: orange;
}

.editor.delete {
  background-color: red;
}

.empty {
  color: #ccc;
}

.input {
  position: absolute;
  left: 0;
  right: 0;
  padding: 0 20rpx;
  display: inline-block;
  box-sizing: border-box;
  width: 334rpx;
  background: #fff;
}

.edit {
  opacity: 0;
}

.edit-input{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  /*background-color: rgba(0, 0, 0, 0.8);*/
  z-index: 1000;
}
.edit-input .input{
  position: absolute;
  bottom: 20rpx;
  left: 40rpx;
  right: 40rpx;
  width: 670rpx;
}
