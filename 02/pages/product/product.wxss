.product {
  margin-bottom: 40rpx;
}

.cate-title, .product-title {
  display: flex;
  align-items: center;
  margin-bottom: 2rpx;
}

.cate-title .label, .product-title .label {
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-right: 2rpx;
  background-color: #ddd;
}

.cate-title .value, .product-title .value {
  flex-grow: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #ddd;
}

.head {
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 20rpx;
  background-color: #ddd;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.head-icon{
  width: 100rpx;
  height: 100rpx;
  padding: 20rpx;
}

.product-images {
  display: flex;
  border-bottom: 1px solid #ddd;
}

.product-image {
  width: 134rpx;
  height: 134rpx;
  padding: 10rpx;
}

.item {
  min-height: 100rpx;
  overflow: hidden;
  border-bottom: 1px solid #ddd;
}

.item-label {
  width: 50%;
  padding-left: 20rpx;
}

.item-value {
  width: 50%;
  padding-left: 20rpx;
}

.item .inner {
  position: relative;
  min-height: 100rpx;
  display: flex;
  align-items: center;
  transition: all 300ms ease;
}

.item .inner.swipeleft {
  transform: translateX(-300rpx);
}

.left {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 670rpx;
  display: flex;
  align-items: center;
}

.right {
  position: absolute;
  right: -300rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 300rpx;
  display: flex;
  align-items: center;
}

.editor {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
}

.editor.sort-up {
  background-color: seagreen;
}

.editor.sort-down {
  background-color: orange;
}

.editor.delete {
  background-color: red;
}
