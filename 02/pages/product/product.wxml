<view class="product">

  <view class="cate-title">
    <view class="label">商品类别</view>
    <view class="value">{{cate.ptitle}} > {{cate.title}}</view>
  </view>

  <view class="product-title">
    <view class="label">商品名称</view>
    <view class="value">
      <input value="{{product.title}}" placeholder="输入商品名称" bindblur="onTitleBlur" />
    </view>
  </view>

  <view class="head">商品图片</view>
  <view class="product-images">
    <block wx:for="{{product.images}}" wx:key="" wx:for-item="image">
      <view class="product-image" data-index="{{index}}" catchtap="onImageTap" catchlongtap="onImageLongTap">
        <image src="{{image}}" />
      </view>
    </block>
    <view class="product-image" wx:if="{{product.images.length<5}}" catchtap="onImageAdd" style="opacity:0.3">
      <image src="/images/icon/camera.png" />
    </view>
  </view>

  <view class="head">价格标签</view>
  <template is="items" data="{{items:product.prices}}" />
  <template is="item-add" data="{{...product.newPrice, type:'price', labelholder:'新增价格标签', valueholder:'输入价格值'}}" />

  <view class="head">商品属性</view>
  <template is="items" data="{{items:product.props}}" />
  <template is="item-add" data="{{...product.newProp, type:'prop', labelholder:'新增属性标签', valueholder:'输入属性值'}}" />

</view>

<template name="items">
  <view class="list">
    <block wx:for="{{items}}" wx:key="">
      <view class="item" data-id="{{item.id}}" catchlongtap="onItemLongTap">
        <view class="item-label">{{item.label}}</view>
        <view class="item-value">{{item.value}}</view>
      </view>
    </block>
  </view>
</template>

<template name="item-add">
  <view class="item item-add">
    <view class="item-label">
      <input value="{{label}}" placeholder="{{labelholder}}" data-type="{{type}}-label" bindblur="onItemBlur" />
    </view>
    <view class="item-value">
      <input value="{{value}}" placeholder="{{valueholder}}" data-type="{{type}}-value" bindblur="onItemBlur" />
    </view>
  </view>
</template>