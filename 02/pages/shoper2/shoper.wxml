<view class="shop">
  <view class="shop-logo" catchtap="onShopLogoTap">
    <image src="{{shop.logo}}" />
  </view>
  <view class="shop-name" catchtap="onShopNameTap">{{shop.name}}</view>
  <view class="shop-row">
    <view class="shop-icon">
      <image src="/images/icon/phone.png" />
    </view>
    <view class="shop-value shop-phone" catchtap="onShopPhoneTap">{{shop.phone}}</view>
  </view>
  <view class="shop-row">
    <view class="shop-icon">
      <image src="/images/icon/address.png" />
    </view>
    <view class="shop-value shop-address" catchtap="onShopAddressTap">{{shop.address}}</view>
  </view>
  <view class="shop-row" catchtap="onManagementTap">
    <view class="shop-icon">
      <image src="/images/icon/product.png" />
    </view>
    <view class="shop-value shop-admin">商品管理</view>
    <view class="shop-icon">
      <image src="/images/icon/enter.png" />
    </view>
  </view>
</view>

<template is="editor" data="{{...editor, platform}}" />

<template name="editor">
  <view class="editor {{type}} {{platform}}" wx:if="{{show}}" style="top:{{top}}px;left:{{left}}px">
    <input focus="{{focus}}" value="{{value}}" placeholder="{{placeholder}}" bindblur="onEditorBlur" data-type="{{type}}" />
  </view>
</template>