.shop {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  background-color: #fff;
  z-index: 1;
}

.shop-logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
}

.shop-name {
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;
  font-size: 2rem;
  text-align: center;
  margin-bottom: 300rpx;
}

.shop-row {
  display: flex;
  align-items: center;
  width: 100%;
  height: 102rpx;
  border-bottom: 1px solid #ccc;
}

.shop-icon {
  flex-shrink: 0;
  width: 100rpx;
  height: 100rpx;
  padding: 26rpx;
}

.shop-value {
  flex-grow: 1;
  height: 100rpx;
  line-height: 100rpx;
}

.editor {
  display: flex;
  align-items: center;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
}

.editor input {
  flex-grow: 1;
}

.editor.shop-name {
  width: 670rpx;
}

.editor.shop-name input {
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
}

.editor.shop-phone {
  height: 100rpx;
  line-height: 100rpx;
}

.editor.shop-address {
  height: 100rpx;
  line-height: 100rpx;
}
