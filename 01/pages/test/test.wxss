/* pages/test/test.wxss */

page {
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
}

view {
  box-sizing: border-box;
}

image {
  width: 100%;
  height: 100%;
  display: block;
}

::-webkit-scrollbar {
  display: none;
}

.categorys {
  border-top: 1px solid #ccc;
}

.category {
  position: relative;
  overflow: hidden;
  background: #fff;
  border-bottom: 1px solid #ccc;
}

.category-new {
  display: flex;
  align-items: center;
  color: #888;
}

.children .category {
  font-size: 0.8em;
  border-bottom: 1px dashed #ccc;
}

.children .category:last-child{
  border-bottom: 1px solid #ccc;
}

.children .category-new {
  padding-left: 0px;
}

.category .inner {
  position: relative;
  height: 60px;
  transition: all 300ms ease;
}

.category .inner.swipeleft {
  transform: translateX(-180px);
}

.left {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 335px;
  display: flex;
  align-items: center;
}

.right {
  position: absolute;
  right: -180px;
  top: 50%;
  transform: translateY(-50%);
  width: 180px;
  display: flex;
  align-items: center;
}

.editor {
  width: 60px;
  height: 58px;
  padding: 20px;
}

.editor.sort-up {
  background-color: seagreen;
}

.editor.sort-down {
  background-color: orange;
}

.editor.delete {
  background-color:red;
}

.category .icon {
  width: 50px;
  height: 60px;
  padding: 20px 15px;
  flex-shrink: 0;
}

.category .title {
  flex-grow: 1;
}

.category .thumb {
  width: 60px;
  height: 60px;
  padding: 5px;
  flex-shrink: 0;
  background-color: transparent;
}